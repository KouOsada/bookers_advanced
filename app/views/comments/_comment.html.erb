<% book.comments.each do |comment| %>
  <% comment_user = comment.user %>
  <tr>
    <td>
      <%= link_to user_path(comment.user), class: "user_#{comment_user.id}" do %>
        <%= attachment_image_tag comment_user, :profile_image, size: "50x50", fallback: "no_image.png" %><br>
        <%= comment_user.name %>
      <% end %>
    </td>
    <td><%= comment.comment %></td>
    <% if comment_user == current_user %>
      <td><%= link_to 'delete', book_comment_path(comment.book_id, comment.id), method: :delete, class: "btn btn-sm btn-danger", remote: true %></td>
    <% end %>
  </tr>
<% end %>